
<form class="form-horizontal" id="formUpdateBarangMasuk">
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Pilih Barang </label>
        <div class="col-md-9">
            <input type="hidden" id="id" value="<%= typeof result.id !== 'undefined' ? result.id : '' %>">
            <select readonly id="barang_id" class="form-control selectpicker" name="barang_id" placeholder="Barang" required>
                <option value="">Pilih Barang</option>
                <% barang.forEach(row => { %>
                    <option value="<%= row.id %>" <% if (result.barang_id == row.id) { %> selected <% } %>>
                        <b><%= row.kode_barang %></b> || <%= row.nama_barang %>
                    </option>
                <% }) %>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Jumlah </label>
        <div class="col-md-9">
            <input readonly id="jumlah" type="number" 
            class="form-control" name="jumlah" min="1" 
            value="<%= typeof result.jumlah !== 'undefined' ? result.jumlah : '' %>" 
            placeholder="Jumlah Barang" required>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Tanggal Input </label>
        <div class="col-md-9">
            <input id="tanggal_input" type="datetime-local" class="form-control" 
            name="tanggal_input" value="<%= tanggal_input %>"
            required>
        </div>
    </div>
    <div class="clearfix form-actions">
        <div class="col-md-offset-3 col-md-9">
            <button class="btn btn-info" type="submit">
                <i class="ace-icon fa fa-check bigger-110"></i>
                Simpan
            </button>

            &nbsp; &nbsp; &nbsp;
            <button class="btn" type="reset">
                <i class="ace-icon fa fa-undo bigger-110"></i>
                Reset
            </button>
        </div>
    </div>
</form>