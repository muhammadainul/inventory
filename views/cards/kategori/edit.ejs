<form class="form-horizontal" id="formUpdateKategori">
    <div class="form-group">
        <input type="hidden" id="id" value="<%= typeof result.id !== 'undefined' ? result.id : '' %>">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Kategori </label>
        <div class="col-md-9">
            <input type="text" id="kategori" 
            class="form-control" 
            name="kategori" placeholder="Kategori Barang" 
            value="<%= typeof result.kategori !== 'undefined' ? result.kategori : '' %>"
            required>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Deskripsi </label>
        <div class="col-md-9">
            <textarea id="deskripsi" class="form-control" 
            name="deskripsi" placeholder="Deskripsi Barang"
            required><%= typeof result.deskripsi !== 'undefined' ? result.deskripsi : '' %>
            </textarea>
        </div>
    </div>
    <div class="clearfix form-actions">
        <div class="col-md-offset-3 col-md-9">
            <button class="btn btn-info" type="submit">
                <i class="ace-icon fa fa-check bigger-110"></i>
                Simpan
            </button>

            &nbsp; &nbsp; &nbsp;
            <button class="btn" type="reset">
                <i class="ace-icon fa fa-undo bigger-110"></i>
                Reset
            </button>
        </div>
    </div>
</form>